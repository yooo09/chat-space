.chat-side
  .side-header 
    .side-header__box
      %p.side-header__box__user-name
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__new-group
          = link_to new_group_path() do
            = icon('far','edit')
        %li.side-header__box__edit-user
          = link_to edit_user_path(current_user.id) do
            = icon('fas','cog')

  .side-groups
    - current_user.groups.each do |group|
      .groups
        = link_to group_messages_path(group), class: "groups" do
          %p.group__group-name
            = group.name
          %p.group__text-message
            = group.show_last_message